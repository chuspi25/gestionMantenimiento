# =====================================================
# CONFIGURACIÓN DEL SISTEMA DE GESTIÓN DE MANTENIMIENTO
# =====================================================

# Configuración del servidor
PORT=3000
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# =====================================================

# Opción 1: URL completa de conexión (recomendado)
DATABASE_URL=postgresql://maintenance_user:secure_password@localhost:5432/maintenance_db

# Opción 2: Configuración individual (alternativa)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=maintenance_db
DB_USER=maintenance_user
DB_PASSWORD=secure_password

# Pool de conexiones
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# =====================================================
# CONFIGURACIÓN DE AUTENTICACIÓN JWT
# =====================================================

# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de sesiones
SESSION_CLEANUP_INTERVAL=3600000

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS Y UPLOADS
# =====================================================

# Directorio de uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt

# =====================================================
# CONFIGURACIÓN DE LOGGING Y AUDITORÍA
# =====================================================

# Nivel de logging: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=logs/app.log
AUDIT_LOG_ENABLED=true

# =====================================================
# CONFIGURACIÓN DE ENCRIPTACIÓN
# =====================================================

# Clave de encriptación (32 caracteres, CAMBIAR EN PRODUCCIÓN)
ENCRYPTION_KEY=your-32-character-encryption-key!!
ENCRYPTION_SALT=maintenance-app-salt-change-this-in-production

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://127.0.0.1:3001

# =====================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =====================================================

# Email (opcional)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Sistema de Mantenimiento <noreply@mantenimiento.com>

# =====================================================
# CONFIGURACIÓN DE DESARROLLO
# =====================================================

# Habilitar logs de consultas SQL en desarrollo
SQL_LOG_ENABLED=true

# Habilitar datos de prueba
SEED_DATA_ENABLED=true